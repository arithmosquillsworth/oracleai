# OracleAI Configuration
# Copy to .env and fill in your API keys

# API Keys - NEVER commit these!
POLYMARKET_API_KEY=your_polymarket_key_here
POLYMARKET_API_SECRET=your_polymarket_secret_here
KALSHI_API_KEY=your_kalshi_key_here

# Twitter/X API (for social signals)
TWITTER_API_KEY=your_twitter_key
TWITTER_API_SECRET=your_twitter_secret
TWITTER_BEARER_TOKEN=your_bearer_token

# OpenAI/Claude API (for advanced reasoning)
OPENAI_API_KEY=your_openai_key
ANTHROPIC_API_KEY=your_anthropic_key

# Execution Settings
DRY_RUN=true  # Set to false to enable real trading
MAX_BET_SIZE_USD=100
BANKROLL_USD=1000

# Agent Settings
MIN_CONFIDENCE_CRYPTO=0.70
MIN_CONFIDENCE_SPORTS=0.65
MIN_CONFIDENCE_POLITICS=0.75
MIN_CONFIDENCE_POPCULTURE=0.60

# Monitoring
RUN_INTERVAL_MINUTES=60
LOG_LEVEL=info
